<?xml version="1.0" encoding="UTF-8"?>

<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:activiti="http://activiti.org/bpmn"
             typeLanguage="http://www.w3.org/2001/XMLSchema"
             expressionLanguage="http://www.w3.org/1999/XPath" targetNamespace="http://www.activiti.org/test">

    <process id="add-group">

        <startEvent id="start"/>
        <sequenceFlow sourceRef="start" targetRef="enterGroupData"/>
        <userTask id="enterGroupData" name="enter-group-data"/>
        <sequenceFlow sourceRef="enterGroupData" targetRef="addGroup"/>
        <serviceTask id="addGroup" activiti:expression="#{groupAdder.add()}" activiti:resultVariable="groupAdded"/>
        <sequenceFlow sourceRef="addGroup" targetRef="end"/>
        <endEvent id="end"/>

    </process>

</definitions>
