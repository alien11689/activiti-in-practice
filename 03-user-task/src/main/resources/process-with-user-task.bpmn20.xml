<?xml version="1.0" encoding="UTF-8"?>

<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             typeLanguage="http://www.w3.org/2001/XMLSchema"
             expressionLanguage="http://www.w3.org/1999/XPath" targetNamespace="http://www.activiti.org/test">

    <process id="process-with-user-task">

        <startEvent id="start"/>
        <sequenceFlow id="flow1" sourceRef="start" targetRef="sendOrder"/>
        <userTask id="sendOrder"/>
        <sequenceFlow sourceRef="sendOrder" targetRef="completeOrder"/>
        <userTask id="completeOrder">
            <potentialOwner>
                <resourceAssignmentExpression>
                    <formalExpression>worker</formalExpression>
                </resourceAssignmentExpression>
            </potentialOwner>
        </userTask>
        <sequenceFlow sourceRef="completeOrder" targetRef="end"/>
        <endEvent id="end"/>

    </process>

</definitions>
