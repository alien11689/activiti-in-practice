<?xml version="1.0" encoding="UTF-8"?>

<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:activiti="http://activiti.org/bpmn"
             typeLanguage="http://www.w3.org/2001/XMLSchema"
             expressionLanguage="http://www.w3.org/1999/XPath" targetNamespace="http://www.activiti.org/test">

    <process id="add-person">

        <startEvent id="start"/>
        <sequenceFlow sourceRef="start" targetRef="createPerson"/>
        <serviceTask id="createPerson"
                     activiti:class="com.blogspot.przybyszd.activitiinpractice.servicetask.PersonCreator"/>
        <sequenceFlow sourceRef="createPerson" targetRef="persistPerson"/>
        <serviceTask id="persistPerson" activiti:expression="#{personDao.persist(person)}"
                     activiti:resultVariable="id"/>
        <sequenceFlow sourceRef="persistPerson" targetRef="end"/>
        <endEvent id="end"/>

    </process>

</definitions>
